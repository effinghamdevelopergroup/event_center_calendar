<p id="notice"><%= notice %></p>

<h1>Room Rentals</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Room</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Note</th>
      <th>Paid amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_rentals.each do |room_rental| %>
      <tr>
        <td><%= room_rental.user_id %></td>
        <td><%= room_rental.room_id %></td>
        <td><%= room_rental.date %></td>
        <td><%= room_rental.start_time %></td>
        <td><%= room_rental.end_time %></td>
        <td><%= room_rental.note %></td>
        <td><%= room_rental.paid_amount %></td>
        <td><%= link_to 'Show', room_rental %></td>
        <td><%= link_to 'Edit', edit_room_rental_path(room_rental) %></td>
        <td><%= link_to 'Destroy', room_rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

